<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/github_issue_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/touchable_background_white">

        <TextView
            android:id="@+id/text_park_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ramsett Park"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"/>

        <TextView
            android:id="@+id/text_manager_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Leslie Knope"
            android:textColor="@color/sfp_green_dark"
            android:textSize="@dimen/text_body"/>

        <TextView
            android:id="@+id/text_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 (555) 876-5309"
            android:bufferType="spannable"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small_body"/>

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="lesliek@pawneeparks.gov"
            android:bufferType="spannable"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small_body"/>

    </LinearLayout>

</android.support.v7.widget.CardView>